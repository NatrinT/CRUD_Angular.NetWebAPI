          }
        },
        "additionalProperties": false
      },
      "User": {
        "required": [
          "email",
          "fullname",
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fullname": {
            "maxLength": 100,
