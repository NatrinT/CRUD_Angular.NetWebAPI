            "minLength": 1,
            "type": "string"
          },
          "password": {
            "maxLength": 256,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "maxLength": 255,
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "mobileNo": {
            "maxLength": 20,
            "type": "string",
            "nullable": true
          },
          "role": {
            "maxLength": 50,
